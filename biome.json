{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 80,
    "indentStyle": "tab",
    "bracketSameLine": false,
    "attributePosition": "multiline",
    "expand": "auto",
    "indentWidth": 2
  },
  "linter": {
    "domains": {
      "react": "none",
      "solid": "all",
      "project": "recommended"
    },
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "noDestructuredProps": "error",
        "noReactPropAssign": "error"
      },
      "suspicious": {
        "noReactSpecificProps": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "semicolons": "asNeeded",
      "trailingCommas": "all",
      "quoteProperties": "asNeeded",
      "jsxQuoteStyle": "double",
      "bracketSameLine": false,
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
